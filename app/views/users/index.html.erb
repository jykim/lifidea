<h1>Listing users</h1> 
<table> 
	<tr> 
		<th>Name</th> 
	</tr> 
	<% for user in @users %> 
	<tr> 
		<td><%=h user.name %></td> 
		<td><%=h user.uid %></td> 
		<% if session[:admin_flag] %>
			<td><%= link_to 'Show', user %></td> 
			<td><%= link_to 'Edit', edit_user_path(user) %></td> 
			<td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', 
			:method => :delete %></td> 
		<%end%>
	</tr> 
	<% end %> 
</table> 
<br /> 
<%= link_to 'New user', new_user_path %> 
