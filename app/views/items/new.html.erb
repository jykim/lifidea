<h1>New item</h1>

<% form_for(@item, :url=>{:action=>:create}) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %> : 
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :did %> : 
    <%= f.text_field :did %>
  </p>
  <p>
    <%= f.label :uri %> : 
    <%= f.text_field :uri %>
  </p>
  <p>
    <%= f.label :itype %> : 
    <%= f.text_field :itype %>
  </p>
  <p>
    <%= f.label :remark %><br />
    <%= f.text_area :remark %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', items_path %>