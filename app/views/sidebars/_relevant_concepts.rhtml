<div id="tagcloud" class="sidebar">
	<div class="title">Relevant Concepts</div>
	<ul>
	<% @rel_cons.each_with_index do |e,i| %>
	    <li><%= link_to $items[e[0]].title, {:controller=>'items', :action=>'click', :htype=>'con', :id=>e[0], :src_item_id=>@item.id, :position=>(i+1), :skipped_items=>@rel_cons[0..i].reverse.map{|e|e[0]}.join("|")} %></li>
	<% end %>
	</ul>
</div>
